@page
@model TerritorialHQ.Areas.Administration.Pages.Logs.IndexModel
@{
}

<h1>Log Files & Backups</h1>


<div class="pure-g">
    <div class="pure-u-1-1 pure-u-md-1-2">
        <h3>TTHQ</h3>
        <a asp-page-handler="FileBackup" class="btn btn-secondary mb-20">Download TTHQ File Backup</a>
        <table class="admin-table">
            <thead>
                <tr>
                    <th>Log Files</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var file in Model.TthqFiles)
                {
                    <tr>
                        <td>
                            <a asp-page-handler="LocalDownload" asp-route-fileName="@file" target="_blank">@file</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="pure-u-1-1 pure-u-md-1-2">
        <h3>APIS</h3>
        <a asp-page-handler="SqlBackup" class="btn btn-secondary mb-20">Download SQL Database Backup</a>
        <table class="admin-table">
            <thead>
                <tr>
                    <th>Log Files</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var file in Model.ApisFiles)
                {
                    <tr>
                        <td>
                            <a asp-page-handler="Download" asp-route-fileName="@file" target="_blank">@file</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
