@page
@model TerritorialHQ.Areas.Administration.Pages.CommunityEvents.CreateModel

@{
    ViewData["Title"] = "Create";
}

<link href="~/css/ckeditor.css" rel="stylesheet" />

<h1>Community Events</h1>
<h2>Create</h2>
<p class="label label-warning">Please only create events that will be accessible for the entire community (no clan-internal events).</p>
<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label class="control-label">Event Image</label>
        <input type="file" name="imageFile" />
    </div>
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="pure-g">
        <div class="form-group pure-u-1-1 pure-u-md-1-2">
            <label asp-for="Start" class="control-label"></label>
            <input asp-for="Start" class="form-control datetimepicker" type="text" placeholder="Select date / time">
            <span asp-validation-for="Start" class="text-danger"></span>
        </div>
        <div class="form-group pure-u-1-1 pure-u-md-1-2">
            <label asp-for="End" class="control-label"></label>
            <input asp-for="End" class="form-control datetimepicker" type="text" placeholder="Select date" / time>
            <span asp-validation-for="End" class="text-danger"></span>
        </div>
    </div>
    <div class="pure-g">
        <div class="pure-u-1-1 pure-u-md-1-2">
            <p>Date and time should be in Universal Time / GMT. Use a tool like <a href="https://savvytime.com/converter/utc" target="_blank">UTC Converter</a> to convert your local time to UTC.</p>
        </div>
        <div class="pure-u-1-1 pure-u-md-1-2">
            <div class="pure-g">
                <div class="form-group pure-u-1-1 pure-u-md-1-2">
                    <div class="checkbox">
                        <label>
                            <input asp-for="Recurring" /> @Html.DisplayNameFor(model => model.Recurring)
                        </label>
                    </div>
                </div>
                <div class="form-group pure-u-1-1 pure-u-md-1-2">
                    <label asp-for="Interval" class="control-label"></label>
                    <input asp-for="Interval" class="form-control">
                    <span asp-validation-for="Interval" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Host" class="control-label"></label>
        <input asp-for="Host" class="form-control" />
        <span asp-validation-for="Host" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Location" class="control-label"></label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DiscordServerLink" class="control-label"></label>
        <input asp-for="DiscordServerLink" class="form-control" />
        <span asp-validation-for="DiscordServerLink" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>

<div>
    <a asp-page="Index">Back to list</a>
</div>


@section Styles {
    <link href="~/lib/flatpickr/dist/flatpickr.min.css" rel="stylesheet" />
}
@section Scripts {

    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.5/datepicker.min.js"></script>
    <script src="~/lib/flatpickr/dist/flatpickr.min.js"></script>
    <script src="~/js/init.datepicker.js"></script>
}
